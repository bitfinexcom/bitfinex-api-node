{
  "tags": {
    "allowUnknownTags": ["category"],
    "dictionaries": ["jsdoc"]
  },
  "source": {
    "include": ["index.js", "lib", "LICENSE.md", "README.md"],
    "includePattern": ".js$"
  },
  "plugins": [
    "plugins/markdown",
    "jsdoc-plugin-npm",
    "jsdoc-plugin-url",
    "jsdoc-mermaid",
    "node_modules/better-docs/category"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": true,
    "smallSourceLink": true,
    "hideAuthor": true,
    "search": true,
    "better-docs": {
      "name": "Bitfinex Node.JS API Client Library",
      "title": "Bitfinex Node.JS Client"
    }
  },
  "opts": {
    "destination": "./docs",
    "encoding": "utf8",
    "private": false,
    "recurse": true,
    "verbose": true,
    "template": "./node_modules/better-docs"
  }
}
